{# Patch for CVE-2021-28861 https://nvd.nist.govb/vuln/detail/CVE-2021-28861 #}
RUN rm /opt/conda/lib/python3.9/mailcap.py

{% if ( "rocky" in os or "centos" in os ) %}
RUN yum -y upgrade \
    && yum clean all
{% else %}
RUN apt-get update \
    && apt-get -y upgrade \
    && rm -rf /var/lib/apt/lists/*
{% endif %}
